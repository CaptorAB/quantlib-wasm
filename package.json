{
    "name": "quantlib-wasm",
    "version": "1.21.1",
    "description": "A WebAssembly implementation of QuantLib for use in browser and Node.js",
    "main": "index.js",
    "scripts": {
        "test": "jest quantlib.test.js --detectOpenHandles --maxWorkers=1 --forceExit",
        "build:wasm": "cross-var docker run -v $INIT_CWD:/src -it --rm captorab/emscripten-quantlib:1.21.1 make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CaptorAB/quantlib-wasm.git"
    },
    "keywords": [
        "quantlib",
        "wasm",
        "webassembly",
        "quantitative",
        "finance"
    ],
    "author": "captor.se",
    "license": "BSD-3-Clause-Attribution",
    "bugs": {
        "url": "https://github.com/CaptorAB/node-quantlib/issues"
    },
    "homepage": "https://github.com/CaptorAB/node-quantlib#readme",
    "devDependencies": {
        "cross-var": "^1.1.0",
        "eslint": "7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-jest": "^24.1.3",
        "jest": "^26.6.3",
        "jest-cli": "26.6.3",
        "prettier-eslint-cli": "5.0.0"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/coverage/**",
            "!.eslintrc.js"
        ]
    },
    "eslintIgnore": [],
    "prettier": {
        "printWidth": 140,
        "semi": true,
        "tabWidth": 4,
        "bracketSpacing": true,
        "arrowParens": "always"
    }
}
